	# Firebase pods
	pod 'Firebase/Core'
	pod 'Firebase/Crash'
	pod 'Firebase/RemoteConfig'
	pod 'Firebase/Storage'
	pod 'Firebase/Performance'
	pod 'Firebase/Firestore'
	
  
  target 'MotiveticaTests' do
    inherit! :search_paths
  end
  
  target 'MotiveticaUITests' do
    inherit! :search_paths
  end
  
end
